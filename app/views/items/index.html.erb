<h2>List of Items</h2>
<%= link_to 'Add Item', new_item_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @items.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.description %></td>
      <td><%= link_to 'Show', item_path(item) %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Destroy', 
                                item_path(item), 
                                method: :delete, 
                                data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <%end%>
</table>



