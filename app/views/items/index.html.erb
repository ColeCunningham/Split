<h2>List of Items</h2>
<%= link_to 'Add Item', new_item_path %>

<ul>
  <% @items.each do |item| %>
    
    <li><%= item.title %></li>
    <li><%= item.imgUrl %></li>
    <li><%= item.url %></li>
    <li><%= item.quantity %></li>
    <li><%= item.price %></li>
    <li>
      <%= form_for([item, item.transactions.build]) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :quantity %>
        <%= f.text_field :quantity %>
        <%= f.submit "Split" %>
      <% end %>
    </li>
    <li><%= link_to 'Show', item_path(item) %>
        <%= link_to 'Edit', edit_item_path(item) %>
        <%= link_to 'Destroy', 
                              item_path(item), 
                              method: :delete, 
                              data: { confirm: 'Are you sure?' } %></li><br>

  <%end%>
</ul>


<!DOCTYPE html>
<html>
    
<head>
    <link rel="stylesheet" href="split.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Items Page</title>
    <meta name="description" content="Items">
</head>
    
<body style= "margin-left:60px;">
    <div class="content">
        <!-- Page Content -->
        <ul>
        <% @items.each do |item| %>
            <div class="product">
                <li class="noStyle">
                    <a href="#" class="img"><img src= <%=item.imgUrl%>></a>
                    <%= link_to item.title, item_path(item), class: "name" %>
                    <div class="price">$<%=item.price%></div>
                    <a href="#">Split!</a>
                </li>
            </div>
        <%end%>
        </ul>
    </div>
</body>
</html>