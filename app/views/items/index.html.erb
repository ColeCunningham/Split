<h2>List of Items</h2>
<%= link_to 'Add Item', new_item_path %>

<ul>
  <% @items.each do |item| %>
    
    <li><%= item.title %></li>
    <li><%= item.imgUrl %></li>
    <li><%= item.url %></li>
    <li><%= item.quantity %></li>
    <li><%= item.price %></li>
    <li>
      <%= form_for([item, item.transactions.build]) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :quantity %>
        <%= f.text_field :quantity %>
        <%= f.submit "Split" %>
      <% end %>
    </li>
    <li><%= link_to 'Show', item_path(item) %>
        <%= link_to 'Edit', edit_item_path(item) %>
        <%= link_to 'Destroy', 
                              item_path(item), 
                              method: :delete, 
                              data: { confirm: 'Are you sure?' } %></li><br>

  <%end%>
</ul>


